<script>
    var lon,lat;

    if ('geolocation' in navigator) {
        navigator.geolocation.getCurrentPosition(async position => {
          lon_a = position.coords.longitude;
          lat_a = position.coords.latitude;
          document.getElementById("aftlon").textContent = lon_a;
          document.getElementById("aftlat").textContent = lat_a;

          const button = document.getElementById('submit2');
          button.addEventListener('click', async event =>{
            const data_a = {lat_a , lon_a};
          const options = {
              method : 'POST',
              headers :{
                  'Content-Type': 'application/json'
              },
              body : JSON.stringify(data_a)
              
          };
          const res = await fetch('/api-a' , options);
          const json_a = await res.json();
          console.log(json_a);
          });
          
        });
    } else {
        console.log("Geolocation is not supported by this browser.");
    }
</script>

<form class="location" action="/newloc" method="post">
    <h2> longitude : <span id="aftlon"></span> </h2>
    <h2> latitude : <span id="aftlat"></span></h2>
    <button type="submit" name="button" id="submit2">submit location</button>
</form>
